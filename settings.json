{
  /* Workbench */
  "workbench.productIconTheme": "fluent-icons",
  "workbench.colorTheme": "Omni",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.startupEditor": "none",
  "workbench.sideBar.location": "right",
  "workbench.tree.indent": 16,
  "workbench.editor.enablePreview": false,
  /* Editor Style */
  "editor.tabSize": 4,
  "editor.minimap.enabled": false,
  "editor.wordWrap": "on",
  "editor.guides.bracketPairs": true,
  "editor.bracketPairColorization.enabled": true,
  "editor.rulers": [90],
  "editor.detectIndentation": true,
  "editor.insertSpaces": true,
  "editor.cursorStyle": "block",
  "editor.linkedEditing": true,
  /*
    FONTES
    CaskaydiaCove Nerd Font
    FantasqueSansM Nerd Font
    FiraCode Nerd Font
    Hack Nerd Font
    Hasklug Nerd Font
    Iosevka Nerd Font
    IosevkaTerm Nerd Font
    JetBrainsMono Nerd Font
    Lilex Nerd Font
    Monoid Nerd Font
    VictorMono Nerd Font
    === == => >= <= -> <- ~~ ~- != !==
  */
  "editor.fontFamily": "JetBrainsMono Nerd Font",
  "editor.fontWeight": "normal",
  "editor.fontLigatures": true,
  "editor.fontSize": 14,
  /* Emmet */
  "emmet.syntaxProfiles": {
    "javascript": "js",
    "php": "php"
  },
  /* Explorer Style */
  "explorer.compactFolders": false,
  /* Files Style */
  "files.insertFinalNewline": true,
  "files.associations": {
    "*.module": "php",
    "*.inc": "php",
    "*.install": "php",
    "*.twig": "html"
  },
  /* Terminal Default */
  "terminal.integrated.defaultProfile.windows": "Git Bash",
  "terminal.integrated.defaultProfile.linux": "zsh",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.fontFamily": "JetBrainsMono Nerd Font",
  /* Code Formatter */
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[php]": {
    // "editor.defaultFormatter": "bmewburn.vscode-intelephense-client",
    "editor.defaultFormatter": "junstyle.php-cs-fixer",
    "editor.formatOnSave": false
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  /* Git */
  "git.suggestSmartCommit": true,
  /* Extensions */
  "extensions.ignoreRecommendations": true,
  /* Material-icon-theme */
  "material-icon-theme.folders.associations": {
    "adapters": "contract",
    "grpc": "pipe",
    "kube": "kubernetes",
    "main": "lib",
    "websockets": "pipe",
    "implementations": "core",
    "protos": "pipe",
    "entities": "class",
    "kafka": "pipe",
    "use-cases": "functions",
    "migrations": "tools",
    "schemas": "class",
    "useCases": "functions",
    "eslint-config": "tools",
    "typeorm": "database",
    "_shared": "shared",
    "mappers": "meta",
    "fakes": "mock",
    "modules": "components",
    "subscribers": "messages",
    "domain": "class",
    "protocols": "contract",
    "infra": "app",
    "view-models": "views",
    "presentation": "template",
    "dtos": "typescript",
    "http": "container",
    "providers": "include",
    "factories": "class",
    "repositories": "mappings",
    "bootstrap": "rules"
  },
  "material-icon-theme.files.associations": {
    ".env": "settings",
    ".env.example": "settings",
    ".php-cs-fixer.cache": "php-cs-fixer"
  },
  /* Inline Parameters */
  "inline-parameters.enabled": true,
  /* Tabnine AI Autocomplete for Javascript, Python, Typescript, PHP, Go, Java, Ruby & more */
  "tabnine.experimentalAutoImports": true,
  /* YAML */
  "redhat.telemetry.enabled": false,
  /* php cs fixer */
  "php-cs-fixer.executablePathWindows": "${workspaceFolder}/tools/php-cs-fixer/vendor/bin/php-cs-fixer.bat",
  "php-cs-fixer.executablePath": "${workspaceFolder}/tools/php-cs-fixer/vendor/bin/php-cs-fixer",
  "php-cs-fixer.onsave": false,
  "php-cs-fixer.formatHtml": false
}
